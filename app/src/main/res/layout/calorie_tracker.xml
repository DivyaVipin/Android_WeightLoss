<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorGreen"
    android:orientation="vertical">
    <TextView
        android:text="Calorie Tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="20dp"
        android:id="@+id/calorieheading"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/addDetails"
        android:layout_gravity="bottom|end"

        android:src="@drawable/add"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Max calories burned:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calorieheading"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/textViewMaxCalories"
        android:textSize="20dp"/>

    <TextView
        android:text="CalorieValue"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textViewMaxCalories"
        android:layout_toEndOf="@+id/calorieheading"
        android:id="@+id/txtViewMCalValue"
        android:textColor="@color/colorWhite"/>
</LinearLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewCalorie"
        android:layout_marginTop="30dp"
        ></ListView>


</LinearLayout>
